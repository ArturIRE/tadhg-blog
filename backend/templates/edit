        <script type="text/javascript">
            var postObject = function(url, obj, callback) {
                var xmlhttp = new XMLHttpRequest();

                xmlhttp.onreadystatechange = function() {
                    if (xmlhttp.readyState === 4) {
                       if(xmlhttp.status === 200){
                           callback(null, xmlhttp.responseText);
                       }
                       else {
                            callback(xmlhttp, null);
                       }
                    }
                };

                xmlhttp.open('POST', url, true)
                xmlhttp.setRequestHeader('Content-type','application/json');
                xmlhttp.send(JSON.stringify(obj));
            };
            </script>
        </script>
    </head>
    
    <body>
        <nav>
            <a id="home" href="/">Home</a>
        </nav>
    
        <main>
        
            <article>
                <form method="POST" action="/submit">
                    <input id="title" type="text"/>
                    <textarea id="textarea"></textarea>
                    <input type="submit" value="Submit now" />
                </form>
            </article>
                
            <div id="output"></div>

            <script type="text/javascript">
            	var titletext = document.getElementById('title');
                var textarea = document.getElementById('textarea');

                var parserUrl = '/preview/';
            	
                var postContentObject = {title:titletext.value,
                                         main:textarea.value};


                console.log(titletext.value);
                console.log(textarea.value);

                console.log('sss');

            	textarea.addEventListener('keyup', function() {
                    postObject(parserUrl, postContentObject, function(err, response) {
                        if (err) alert(JSON.stringify(err));

                        var output = document.getElementById('output');
                        output.innerHTML = ''+ JSON.parse(response).titletext + JSON.parse(response).textarea;



                    });
                });
            </script>
        </main>
    </body>
